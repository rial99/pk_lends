<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/username"
        android:layout_width="302dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="39dp"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/invest_amt"
        android:layout_width="132dp"
        android:layout_height="67dp"
        android:layout_alignRight="@+id/username"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="137dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/lend_amt"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_alignLeft="@+id/borrow_amt"
        android:layout_alignTop="@+id/textView14"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/borrow_amt"
        android:layout_width="132dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignRight="@+id/username"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="121dp"
        android:layout_height="67dp"
        android:layout_alignLeft="@+id/username"
        android:layout_alignTop="@+id/invest_amt"
        android:text="invest amount"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/username"
        android:layout_centerVertical="true"
        android:text="lend amount"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="121dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/username"
        android:layout_marginBottom="139dp"
        android:text="borrow amount"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Log_out_B"
        android:layout_width="122dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/buttonshape"
        android:text="Log out"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30sp" />
    <Button
        android:id="@+id/add"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="148dp"
        android:text="+" />

    <Button
        android:id="@+id/withdraw"
        android:layout_width="54dp"
        android:layout_height="38dp"
        android:layout_alignBaseline="@+id/invest_amt"
        android:layout_toEndOf="@+id/username"
        android:text="-" />

</RelativeLayout>