<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/user_image"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:padding="0dp"
        android:src="@drawable/data_usage" />

    <TextView
        android:id="@+id/emai_id_user"
        android:layout_width="123dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/user_image"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Log_out_B"
        android:layout_width="74dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/user_image"
        android:layout_marginEnd="16dp"
        android:text="Log out"
        android:background="@drawable/buttonshape" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_image"
        android:layout_marginTop="-10dp"
        android:text="----------"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="114dp">

        <ImageView
            android:id="@+id/invested_view_group"
            android:layout_width="341dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/invested_group" />

        <Button
            android:id="@+id/withdraw"
            android:layout_width="102dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:background="@drawable/buttonshape_withdraw"
            android:text="withdraw" />

        <Button
            android:id="@+id/add"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:layout_alignTop="@+id/withdraw"
            android:layout_toEndOf="@+id/withdraw"
            android:background="@drawable/buttonshape_add"
            android:text="add" />

        <TextView
            android:id="@+id/invest_amt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="70dp"
            android:text="--"
            android:textSize="30sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/borrowed_view_group"
            android:layout_width="341dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/borrowed_group" />

        <TextView
            android:id="@+id/borrow_amt"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/invest_amt"
            android:layout_centerVertical="true"
            android:text="--"
            android:textSize="30sp" />

        <TextView

            android:id="@+id/borrow_interest"
            android:layout_width="99dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/invest_amt"
            android:text="--"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/borrow"
            android:layout_width="101dp"
            android:layout_height="27dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="181dp"
            android:background="@drawable/button_borrow"
            android:text="borrow" />

        <Button
            android:id="@+id/repay"
            android:layout_width="56dp"
            android:layout_height="27dp"
            android:layout_alignTop="@+id/borrow"
            android:layout_toEndOf="@+id/withdraw"
            android:background="@drawable/button_repay"
            android:text="repay" />

        <ImageView
            android:id="@+id/lended_view_group"
            android:layout_width="341dp"
            android:layout_height="119dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:src="@drawable/lended_group" />

        <TextView
            android:id="@+id/lend_amt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/invest_amt"
            android:layout_marginBottom="58dp"
            android:text="--"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lend_interest"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/lend_amt"
            android:layout_alignEnd="@+id/add"
            android:text="0"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/withdraw"
            android:layout_centerVertical="true"
            android:text="+"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>